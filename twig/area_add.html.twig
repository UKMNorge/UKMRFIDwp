{% extends "_layout.html.twig" %}

{% block header %}
	<h1>
		<img src="/wp-content/plugins/UKMRFIDwp/img/id-48.png" width="40" style="float: left; margin-right: 10px" />
		<a href="?page={{ GET('page') }}">RFID</a> / 
		<a href="?page={{ GET('page') }}&action=areas">Områder</a> /
		Legg til nytt
	</h1>
{% endblock %}

{% block content %}
	<form action="?page={{ GET('page') }}&action=areas" method="POST">
		<input type="hidden" name="action" value="add" />
		<div class="form-group">
			<label>Navn på område</label>
			<input class="form-control input-lg" type="text" name="name" />
		</div>
	
		<div class="form-group">
			<label>Antall personer som kan være inne på området</label>
			<input class="form-control" type="number" name="capacity" value="0" />
			<p class="help text-muted">
				0 = ubegrenset
			</p>
		</div>
		
		<div class="form-group">
			<button type="submit" class="btn btn-success btn-lg">Opprett</button>
		</div>
	</form>
{% endblock %}