{% extends "_layout.html.twig" %}

{% block header %}
	<h1>
		<img src="/wp-content/plugins/UKMRFIDwp/img/id-48.png" width="40" style="float: left; margin-right: 10px" />
		<a href="?page=RFID">RFID</a> / 
		Personer
	</h1>

	<p class="">
		Importer fra 
		<a href="?page={{ GET('page') }}&action=fylkesimport" class="btn btn-mini btn-xs btn-success">fylker</a>
		<a href="?page={{ GET('page') }}&action=excelimport" class="btn btn-mini btn-xs btn-success">excel</a>
	</p>
{% endblock %}


{% block content %}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Person</th>
				<th>Gruppe</th>
				<th>Ekstern-ID</th>
				<th>Handlinger</th>
			</tr>
		</thead>
		
		<tbody>
			{% for person in persons %}
				<tr>
					<td>{{ person.getName() }}</td>
					<td>{{ person.getHerd().getName() }}</td>
					<td class="small">{{ person.getForeignId() }}</td>
					<td>
						<a href="?page={{ GET('page') }}&action=persons&delete={{ person.getId() }}" class="btn btn-mini btn-xs btn-danger" onclick="return confirm('Er du sikker pÃ¥ at du vil slette denne?');">slett</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Ingen registrerte grupper</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}