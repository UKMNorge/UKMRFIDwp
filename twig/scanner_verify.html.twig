{% extends "_layout.html.twig" %}

{% block header %}
	<h1>
		<img src="/wp-content/plugins/UKMRFIDwp/img/id-48.png" width="40" style="float: left; margin-right: 10px" />
		<a href="?page=RFID">RFID</a> / 
		<a href="?page={{ GET('page') }}&action=scanners">Scannere</a> /
		Aktivér
	</h1>
{% endblock %}


{% block content %}
	<form action="?page={{ GET('page') }}&action=scanners" method="POST">
		<input type="hidden" name="action" value="verify" />
		<input type="hidden" name="scanner" value="{{ scanner.getId() }}" />
		
		<div class="form-group">
			<label>Navn på scanner</label>
			<input class="form-control input-lg" type="text" disabled="disabled" name="guid-view" value="{{ scanner.getGUID() }}" />
		</div>
		
		<div class="form-group">
			<label>Velg område</label>
			<select class="form-control" name="area">
				{% for area in areas %}
					<option value="{{ area.getId() }}">{{ area.getName() }}</option>
				{% else %}
					<option value="false" disabled="disabled">Du må registrere minst ett område før du kan aktivere scannere</option>
				{% endfor %}
			</select>
		</div>
		
		<div class="form-group">
			<label>Velg retning</label>
			<select class="form-control" name="direction">
				<option value="in">Inn</option>
				<option value="out">Ut</option>
			</select>
		</div>
		
		<div class="form-group">
			<label>Navn på scanner</label>
			<input class="form-control input-lg" type="text" name="name" />
			<p>
				Oppgi et beskrivende navn så det er lett å kjenne igjen scanneren
			</p>
		</div>
		
		<div class="form-group">
			<button type="submit" class="btn btn-warning btn-lg">Aktivér</button>
		</div>
	</form>
{% endblock %}